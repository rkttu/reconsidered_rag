# =============================================================================
# Reconsidered RAG 환경 설정
# =============================================================================
# 이 파일을 복사하여 .env로 저장하고 실제 값을 입력하세요.
# cp .env.example .env
# =============================================================================

# =============================================================================
# Azure OpenAI (공통)
# Step 1, Step 2에서 공통으로 사용
# https://portal.azure.com → Azure OpenAI 리소스
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Step 1 (01_prepare_content.py): 이미지 내용 이해용 모델
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Step 2 (02_enrich_content.py): 콘텐츠 확장용 모델
# 설정하지 않으면 AZURE_OPENAI_DEPLOYMENT_NAME 사용
# 미설정 시 Step 2는 단순 복사로 진행
AZURE_OPENAI_ENRICHMENT_MODEL=gpt-4.1

# =============================================================================
# Azure AI Document Intelligence (선택)
# Step 1 (01_prepare_content.py): 스캔 PDF, 이미지 OCR
# https://portal.azure.com → Cognitive Services → Document Intelligence
# =============================================================================
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-document-intelligence-key

# =============================================================================
# Azure Speech Services (선택)
# Step 1 (01_prepare_content.py): 음성→텍스트 변환 (오디오 파일용)
# https://portal.azure.com → Speech 리소스
# =============================================================================
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=koreacentral
