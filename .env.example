# =============================================================================
# AI Pack 환경 설정
# =============================================================================
# 이 파일을 복사하여 .env로 저장하고 실제 값을 입력하세요.
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Azure AI Document Intelligence (스캔 PDF, 이미지 OCR)
# https://portal.azure.com에서 생성
# -----------------------------------------------------------------------------
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-document-intelligence-key

# -----------------------------------------------------------------------------
# Azure OpenAI (GPT-4o Vision - 이미지 내용 이해)
# https://portal.azure.com에서 Azure OpenAI 리소스 생성
# -----------------------------------------------------------------------------
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# -----------------------------------------------------------------------------
# Azure Speech Services (음성→텍스트 변환)
# https://portal.azure.com에서 Speech 리소스 생성
# -----------------------------------------------------------------------------
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=koreacentral

# -----------------------------------------------------------------------------
# Azure Video Indexer (비디오 분석, 자막 추출)
# https://www.videoindexer.ai에서 설정
# -----------------------------------------------------------------------------
AZURE_VIDEO_INDEXER_ACCOUNT_ID=your-account-id
AZURE_VIDEO_INDEXER_API_KEY=your-api-key
AZURE_VIDEO_INDEXER_LOCATION=trial

# -----------------------------------------------------------------------------
# 옵션: Azure 인증 방식 선택
# -----------------------------------------------------------------------------
# "key" = API 키 사용 (기본값)
# "default" = DefaultAzureCredential 사용 (Azure CLI, Managed Identity 등)
AZURE_AUTH_METHOD=key
